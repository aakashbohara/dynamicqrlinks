# --- Environment ---
# "dev" = local development, "prod" = production
ENVIRONMENT=dev

# --- Database ---
# Dev: use Supabase or local postgres
# Prod: use the local PostgreSQL container (docker-compose sets this)
DATABASE_URL=postgresql+psycopg2://qrlinks:CHANGE_ME_STRONG_PASSWORD@localhost:5432/qrlinks

# --- Auth / JWT ---
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_ME_GENERATE_A_REAL_SECRET
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# --- Admin credentials ---
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# --- Public URL ---
# Dev: http://127.0.0.1:8000
# Prod: https://yourdomain.com
PUBLIC_BASE_URL=http://127.0.0.1:8000
